generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id      Int      @id @default(autoincrement())
  username   String   @unique
  email  String @unique 
  password  String  
  name    String?
  createdAt DateTime @default(now())
  blogs Blog[]
  comments Comment[]
  favourites Blog[] @relation("favouriteBlog")
  likedBlogs Blog[] @relation("likedBlog")
  likdeComments Comment[] @relation("likedComment")
}

model Blog {
  id      Int      @id @default(autoincrement())
  title   String  
  content String 
  author User @relation(fields: [authorId],references: [id])
  authorId Int
  createdAt DateTime @default(now())
  comments Comment[]
  favoritedBy User[] @relation("favouriteBlog")
  likedBy User[] @relation("likedBlog")
}

model Comment {
  id Int @id @default(autoincrement())
  blog Blog @relation(fields: [blogId], references: [id])
  blogId   Int   
  author User @relation(fields: [authorId],references: [id])
  authorId Int
  comment String 
  createdAt DateTime @default(now())
  likedBy User[] @relation("likedComment")
}


